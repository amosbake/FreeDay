<resources xmlns:tools="http://schemas.android.com/tools">
  <style name="FreeDay" parent="FreeDay.Base"/>

  <!-- Base application theme. -->
  <style name="FreeDay.Base" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:textColorPrimary">@android:color/black</item>
    <item name="android:textColorPrimaryInverse">@color/text_light</item>
    <item name="android:statusBarColor" tools:targetApi="lollipop">
      @color/colorPrimaryDark
    </item>
    <item name="android:textColor">@color/text_dark</item>
    <item name="android:radioButtonStyle">@style/FreeDay.CompoundButton.Radio</item>
    <item name="android:buttonStyle">@style/FreeDay.CompoundButton</item>
    <item name="android:windowBackground">@color/light_grey</item>
    <item name="android:colorBackground">@color/light_grey</item>
  </style>

  <style name="FreeDay.CompoundButton" parent="Widget.AppCompat.Button.Borderless">
    <item name="android:background">@drawable/selector_button</item>
    <item name="android:button">@null</item>
  </style>

  <style name="FreeDay.CompoundButton.Radio" parent="FreeDay.CompoundButton">
    <item name="android:background">@drawable/selector_checkable</item>
  </style>

  <style name="FreeDay.TextAppearance" />

  <style name="FreeDay.TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
    <item name="android:textColor">@color/colorPrimary</item>
  </style>

  <style name="FreeDay.TextAppearance.Title.Inverse" parent="TextAppearance.AppCompat.Title">
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="FreeDay.TextAppearance.Subhead" parent="TextAppearance.AppCompat.Subhead">
    <item name="android:textColor">@color/colorPrimary</item>
  </style>

</resources>
